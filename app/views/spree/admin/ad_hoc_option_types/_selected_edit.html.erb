    <%= form_for(ahot, url: admin_product_ad_hoc_option_type_url(@product, ahot), html: { method: :put }) do |f| %>

    <tr>
      <td><%= ahot.option_type.name %></td>
      <td><%= ahot.option_type.presentation %></td>
      <td><%= ahot.is_required %></td>
      <td class="actions">
      <%= link_to_with_icon 'delete',  I18n.t("remove", scope: :spree), admin_product_ad_hoc_option_type_url(@product, ahot) %>
      </td>
    </tr>


    <tr>
      <td colspan="4">
        <h3><%= I18n.t("option_values", scope: :spree) %></h3>
        <table class="index">
          <thead>
            <tr>
              <th><%= I18n.t("name", scope: :spree) %></th>
              <th><%= I18n.t("display", scope: :spree) %></th>
              <th><%= I18n.t("price_modifier", scope: :spree) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="option_values">
            <%= f.fields_for :option_values do |option_value_form| %>
              <%= render partial: "option_value_fields", locals: {f: option_value_form} %>
            <% end %>
          </tbody>
        </table>
      </td>
    </tr>

    <p class="form-buttons">
      <%= button I18n.t("update", scope: :spree) %>
      <%= I18n.t("or", scope: :spree) %> <%= link_to I18n.t("cancel", scope: :spree), admin_product_ad_hoc_option_types_url(@product) %>
    </p>

<% end %>
